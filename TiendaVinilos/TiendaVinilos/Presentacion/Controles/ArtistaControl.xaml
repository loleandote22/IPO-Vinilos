<UserControl
    x:Class="TiendaVinilos.Presentacion.ArtistaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:TiendaVinilos.Presentacion"
    mc:Ignorable="d">
    <Grid>

        <Button Padding="0" Width="250" Height="250" BorderThickness="0" BorderBrush="Transparent" Command="{Binding VerArtista}" >
            <StackPanel Orientation="Vertical"  Width="260" Height="250" Background="Olive" Margin="-1" >
                <Image Height="150" Width="150" Margin=" 0,15,0,15" />
                <Label Content="Eminem" HorizontalContentAlignment="Center" FontSize="20" FontFamily="verdana"/>
            </StackPanel>

        </Button>
        <Border CornerRadius="10" BorderThickness="2" Width="260" Height="250" BorderBrush="Black"/>
    </Grid>


</UserControl>
