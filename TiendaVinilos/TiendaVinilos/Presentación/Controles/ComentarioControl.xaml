<UserControl x:Class="TiendaVinilos.Presentación.Controles.ComentarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiendaVinilos.Presentación.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Source="{Binding Imagen,UpdateSourceTrigger=PropertyChanged}" Margin="10, 0, 30, 0" Width="50" Height="50" VerticalAlignment="Top"/>
        <TextBox IsReadOnly="True" BorderThickness="0" Grid.Column="1" Text="{Binding Comentario, UpdateSourceTrigger=PropertyChanged}" FontSize="15" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
